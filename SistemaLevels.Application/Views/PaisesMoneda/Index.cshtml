@{
    ViewData["Title"] = "Monedas por País";
}

@section Estilos {

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/css/paisesmoneda.css" rel="stylesheet" />
    <link href="~/css/disenopantallas.css" rel="stylesheet" />
}

<div class="container-fluid mt-5">

    <div class="container page-99" style="margin-top:40px">
        <div class="cc-header shadow-lg rounded-4 p-4 mb-4">
            <div class="cc-header-row">
                <span class="cc-badge"><i class="fa fa-money"></i></span>
                <div>
                    <h2 class="m-0 fw-800">Monedas</h2>
                    <small class="text-muted-cc">Monedas por país</small>
                </div>

                <div class="refresh-premium">

                    <div class="refresh-icon">
                        <i class="fa fa-clock-o"></i>
                    </div>

                    <div class="refresh-info">
                        <div class="refresh-title">Auto Refresh</div>
                        <div class="refresh-sub">
                            <div id="refreshCountdown" class="refresh-dynamic">
                                Configurable
                            </div>
                        </div>
                    </div>

                    <select id="currencyRefreshSelect" class="refresh-dropdown">
                        <option value="1">1 min</option>
                        <option value="2">2 min</option>
                        <option value="3">3 min</option>
                        <option value="5">5 min</option>
                        <option value="6">6 min</option>
                        <option value="10">10 min</option>
                        <option value="15">15 min</option>
                        <option value="20">20 min</option>
                        <option value="30">30 min</option>
                        <option value="45">45 min</option>
                        <option value="60">1 hora</option>
                        <option value="120">2 horas</option>
                    </select>

                </div>

                <div class="ms-auto">
                    <button class="btn btn-success" onclick="nuevaMoneda()">
                        <i class="fa fa-plus"></i> Nueva moneda
                    </button>
                </div>
            </div>
        </div>

        <div class="card-glass p-4">
            <div id="contenedorMonedas" class="monedas-grid"></div>
        </div>
    </div>
</div>

<!-- MODAL EDICION -->
<div class="modal fade" id="modalEdicion" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold" id="modalEdicionLabel">
                    Nueva moneda
                </h5>
                <button type="button" class="btn-close"
                        data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                <input type="hidden" id="txtId">

                <div class="alert alert-danger d-none" id="errorCampos">
                    <i class="fa fa-exclamation-triangle"></i>
                    Completá los campos obligatorios.
                </div>

                <div class="mb-3">
                    <label class="form-label">País</label>
                    <select id="cmbPais" class="form-control"></select>
                    <div class="invalid-feedback">Campo obligatorio</div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Nombre</label>
                    <input id="txtNombre" class="form-control" maxlength="100">
                    <div class="invalid-feedback">Campo obligatorio</div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Cotización</label>
                    <input id="txtCotizacion" class="form-control" inputmode="decimal">
                    <div class="invalid-feedback">Campo obligatorio</div>
                </div>

            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary"
                        data-bs-dismiss="modal">
                    <i class="fa fa-arrow-left"></i> Volver
                </button>

                <button id="btnGuardar"
                        class="btn btn-primary"
                        onclick="guardarMoneda()">
                    <i class="fa fa-check"></i> Registrar
                </button>
            </div>
        </div>
    </div>
</div>

<partial name="~/Views/Utils/Modals.cshtml" />

@section Scripts {
    <script src="~/js/PaisesMonedas.js?v=1.0"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
}
