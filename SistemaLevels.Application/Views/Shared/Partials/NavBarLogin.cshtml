<!-- ===============================
     MODAL: LISTA DE CONFIGURACION
================================ -->
<div class="modal fade rp-modal" id="modalConfiguracion" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content rp-modal-content">

            <!-- HEADER -->
            <div class="modal-header rp-modal-header">
                <div>
                    <div class="rp-modal-title" id="modalConfiguracionLabel">
                        <i class="fa fa-cogs"></i>
                        Configuración
                    </div>
                    <div class="rp-modal-subtitle">
                        Editá los valores disponibles
                    </div>
                </div>

                <button type="button"
                        class="btn-close rp-btn-close"
                        data-bs-dismiss="modal">
                </button>
            </div>

            <!-- BODY -->
            <div class="modal-body">

                <!-- MENSAJE LISTA VACIA -->
                <label id="lblListaVacia"
                       class="rp-empty-label"
                       hidden>
                </label>

                <!-- LISTA -->
                <div class="rp-list-container" id="configuracion-list">
                    <!-- Se llena dinámicamente -->
                </div>

                <!-- PANEL EDICION -->
                <div id="contenedorNombreConfiguracion"
                     class="rp-edit-panel"
                     hidden>

                    <label id="lblNombreConfiguracion"
                           class="rp-label"
                           for="txtNombreConfiguracion">
                        Nombre
                    </label>

                    <input type="text"
                           class="rp-input"
                           id="txtNombreConfiguracion">

                    <input type="hidden"
                           id="txtIdConfiguracion">

                    <!-- COMBO OPCIONAL -->
                    <div id="divConfiguracionCombo" style="margin-top:12px;" hidden>
                        <label id="lblConfiguracionCombo"
                               class="rp-label">
                        </label>

                        <select id="cmbConfiguracion"
                                class="rp-input">
                        </select>
                    </div>

                    <!-- BOTONES -->
                    <div class="rp-edit-actions">
                        <button id="btnRegistrarModificarConfiguracion"
                                class="rp-btn rp-btn-primary"
                                onclick="guardarCambiosConfiguracion()">
                            <i class="fa fa-check"></i>
                            Guardar
                        </button>

                        <button class="rp-btn rp-btn-soft"
                                onclick="cancelarModificarConfiguracion()">
                            <i class="fa fa-times"></i>
                            Cancelar
                        </button>
                    </div>

                </div>

                <!-- BOTON AÑADIR -->
                <div class="rp-add-container">
                    <button id="agregarConfiguracion"
                            class="rp-btn rp-btn-primary"
                            onclick="agregarConfiguracion()">
                        <i class="fa fa-plus"></i>
                        Añadir nuevo
                    </button>
                </div>

            </div>

            <!-- FOOTER -->
            <div class="modal-footer rp-modal-footer">
                <button class="rp-btn rp-btn-soft"
                        data-bs-dismiss="modal"
                        onclick="abrirConfiguraciones()">
                    <i class="fa fa-arrow-left"></i>
                    Volver
                </button>
            </div>

        </div>
    </div>
</div>



