@{
    ViewData["Title"] = "Personal";
}

@section Estilos {
    <!-- DataTables -->
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/fixedheader/3.2.2/css/fixedHeader.dataTables.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Estilos base -->
    <link href="~/css/Personal.css" rel="stylesheet" />
    <link href="~/css/Productora.css" rel="stylesheet" />
    <link href="~/css/disenopantallas.css?v=1.0" rel="stylesheet" />
}

<div class="container-fluid mt-5">

    <div class="container page-99" style="margin-top:40px">
        <div class="cc-header shadow-lg rounded-4 p-4 mb-4">
            <div class="d-flex align-items-center gap-3 flex-wrap">
                <div class="d-flex align-items-center gap-3">
                    <span class="cc-badge"><i class="fa fa-users"></i></span>
                    <div>
                        <h2 class="m-0 fw-800">Personal</h2>
                        <small class="text-muted-cc">Gestión de personal</small>
                    </div>
                </div>

                <div class="ms-auto d-flex gap-4 flex-wrap align-items-center">
                    <div class="cc-stat">
                        <div class="label">Personal</div>
                        <div class="value"><strong id="kpiCantPersonal">0</strong></div>
                    </div>

                    <div class="dropdown cc-dd">
                        <button class="btn btn-secondary dropdown-toggle"
                                type="button" id="dropdownColumnas"
                                data-bs-toggle="dropdown"
                                data-bs-display="static"
                                data-bs-auto-close="outside">
                            <i class="fa fa-cog me-2"></i> Config. Columnas
                        </button>
                        <ul class="dropdown-menu cc-dropdown-menu"
                            id="configColumnasMenu"></ul>
                    </div>

                    <a class="btn btn-success d-flex align-items-center px-3 py-2 btnnuevo"
                       onclick="nuevoPersonal()">
                        <i class="fa fa-plus-square me-2"></i> Nuevo
                    </a>
                </div>
            </div>
        </div>

        <div class="card-glass p-3">

            <!-- =========================
                 FILTROS PERSONAL
            ========================= -->
            <div class="rp-filtros-wrap mb-3">

                <div class="rp-filtros-head"
                     data-bs-toggle="collapse"
                     data-bs-target="#panelFiltrosPersonal"
                     aria-expanded="false">

                    <div class="title">
                        <i class="fa fa-filter"></i>
                        <span>Filtros</span>
                        <small class="text-muted-cc" id="txtFiltrosEstadoPersonal"
                               style="margin-left:8px;"></small>
                    </div>

                    <i class="fa fa-chevron-down chev"></i>
                </div>

                <div id="panelFiltrosPersonal" class="collapse">
                    <div class="rp-filtros-body">

                        <div class="row g-3">

                            <!-- Nombre -->
                            <div class="col-md-3">
                                <div class="rp-filter-label">Nombre contiene</div>
                                <input type="text"
                                       id="fNombre"
                                       class="rp-filter-input"
                                       placeholder="Ej: Juan..." />
                            </div>

                            <!-- País -->
                            <div class="col-md-3">
                                <div class="rp-filter-label">País</div>
                                <select id="fPais"
                                        class="rp-filter-select select2"></select>
                            </div>

                            <!-- Tipo Documento -->
                            <div class="col-md-3">
                                <div class="rp-filter-label">Tipo Documento</div>
                                <select id="fTipoDocumento"
                                        class="rp-filter-select select2"></select>
                            </div>

                            <!-- Condición IVA -->
                            <div class="col-md-3">
                                <div class="rp-filter-label">Condición IVA</div>
                                <select id="fCondicionIva"
                                        class="rp-filter-select select2"></select>
                            </div>

                            <!-- 🔥 NUEVO: Rol -->
                            <div class="col-md-3">
                                <div class="rp-filter-label">Rol asignado</div>
                                <select id="fRol"
                                        class="rp-filter-select select2"></select>
                            </div>

                            <!-- 🔥 NUEVO: Artista -->
                            <div class="col-md-3">
                                <div class="rp-filter-label">Artista asignado</div>
                                <select id="fArtista"
                                        class="rp-filter-select select2"></select>
                            </div>

                        </div>

                        <!-- BOTONES -->
                        <div class="rp-filtros-actions mt-3">

                            <button class="btn btn-outline-light"
                                    type="button"
                                    onclick="limpiarFiltrosPersonal()">
                                <i class="fa fa-eraser"></i> Limpiar
                            </button>

                            <button class="btn btn-primary"
                                    type="button"
                                    onclick="aplicarFiltrosPersonal()">
                                <i class="fa fa-check"></i> Aplicar
                            </button>

                        </div>

                    </div>
                </div>
            </div>
            <div class="dt-dark-wrap">
                <table class="dt-dark display nowrap compact"
                       id="grd_Personal" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Nombre</th>
                            <th>País</th>
                            <th>Tipo Doc</th>
                            <th>Nro Doc</th>
                            <th>Condición IVA</th>
                            <th>Teléfono</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<!-- MODAL -->
<div class="modal fade" id="modalEdicion" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">

            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold" id="modalEdicionLabel">
                    Nuevo Personal
                </h5>
                <button type="button" class="btn-close"
                        data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                <!-- NAV TABS -->
                <ul class="nav rp-tabs-modern mb-3" id="personalTabs">
                    <li class="nav-item">
                        <button class="nav-link active"
                                data-bs-toggle="tab"
                                data-bs-target="#tabDatos">
                            <i class="fa fa-user"></i> Datos del Personal
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link"
                                data-bs-toggle="tab"
                                data-bs-target="#tabRoles">
                            <i class="fa fa-id-badge"></i>
                            Roles asignados
                            <span id="contadorRoles" class="rp-tab-count">(0)</span>
                        </button>
                    </li>

                    <li class="nav-item d-none" id="tabArtistasBtn">
                        <button class="nav-link"
                                data-bs-toggle="tab"
                                data-bs-target="#tabArtistas">
                            <i class="fa fa-music"></i>
                            Artistas asignados
                            <span id="contadorArtistas" class="rp-tab-count">(0)</span>
                        </button>
                    </li>

                </ul>

                <div class="tab-content">

                    <!-- TAB DATOS -->
                    <div class="tab-pane fade show active" id="tabDatos">
                        <form class="row g-3">

                            <input type="text" id="txtId" hidden>

                            <div class="col-md-6">
                                <label class="form-label">Nombre</label>
                                <input id="txtNombre" class="form-control" required>
                                <div class="invalid-feedback">Campo obligatorio</div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">País</label>
                                <select id="cmbPais" class="form-control"></select>
                                <div class="invalid-feedback">Campo obligatorio</div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Tipo Documento</label>
                                <select id="cmbTipoDocumento" class="form-control"></select>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Número Documento</label>
                                <input id="txtNumeroDocumento" class="form-control">
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Condición IVA</label>
                                <select id="cmbCondicionIva" class="form-control"></select>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Fecha Nacimiento</label>
                                <input id="txtFechaNacimiento" type="date" class="form-control">
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Teléfono</label>
                                <input id="txtTelefono" class="form-control">
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Email</label>
                                <input id="txtEmail" class="form-control">
                            </div>

                            <div class="col-md-12">
                                <label class="form-label">Dirección</label>
                                <input id="txtDireccion" class="form-control">
                            </div>

                        </form>
                    </div>

                    <!-- TAB ROLES -->
                    <div class="tab-pane fade" id="tabRoles">
                        <div id="listaRoles" class="rp-checklist"></div>
                    </div>

                    <!-- TAB ARTISTAS -->
                    <div class="tab-pane fade" id="tabArtistas">
                        <div id="listaArtistas" class="rp-checklist"></div>
                    </div>

                </div>

                <!-- AUDITORÍA -->
                <div class="rp-auditoria d-none mt-3" id="infoAuditoria">
                    <div id="infoRegistro"></div>
                    <div id="infoModificacion"></div>
                </div>

            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary"
                        data-bs-dismiss="modal">
                    <i class="fa fa-arrow-left"></i> Volver
                </button>

                <button id="btnGuardar"
                        class="btn btn-primary"
                        onclick="guardarPersonal()">
                    <i class="fa fa-check"></i> Registrar
                </button>
            </div>
        </div>
    </div>
</div>

<partial name="~/Views/Utils/Modals.cshtml" />
@section Scripts {

    <!-- 1️⃣ jQuery (SIEMPRE primero) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- 2️⃣ DataTables CORE -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <!-- 3️⃣ DataTables Buttons (DESPUÉS del core) -->
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>

    <!-- 4️⃣ Dependencias exportación -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>

    <!-- 5️⃣ Botones HTML5 -->
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>

    <!-- 6️⃣ Select2 -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <!-- 7️⃣ TU SCRIPT (SIEMPRE ÚLTIMO) -->
    <script src="~/js/Personal.js?v=1.0"></script>

}