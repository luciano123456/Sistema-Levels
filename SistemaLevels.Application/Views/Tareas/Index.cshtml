@{
    ViewData["Title"] = "Tareas";
}

@section Estilos {
    <!-- DataTables -->
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/fixedheader/3.2.2/css/fixedHeader.dataTables.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Estilos base -->
    <link href="~/css/usuarios.css?v=1.0" rel="stylesheet" />
    <link href="~/css/disenopantallas.css?v=1.0" rel="stylesheet" />
}

<div class="container-fluid mt-5">

    <div class="container page-99" style="margin-top:40px">
        <div class="cc-header shadow-lg rounded-4 p-4 mb-4">
            <div class="d-flex align-items-center gap-3 flex-wrap">
                <div class="d-flex align-items-center gap-3">
                    <span class="cc-badge"><i class="fa fa-tasks"></i></span>
                    <div>
                        <h2 class="m-0 fw-800">Tareas</h2>
                        <small class="text-muted-cc">Gestión de tareas</small>
                    </div>
                </div>

                <div class="ms-auto d-flex gap-4 flex-wrap align-items-center">
                    <div class="cc-stat">
                        <div class="label">Tareas</div>
                        <div class="value"><strong id="kpiCantTareas">0</strong></div>
                    </div>

                    <div class="dropdown cc-dd">
                        <button class="btn btn-secondary dropdown-toggle"
                                type="button" id="dropdownColumnas"
                                data-bs-toggle="dropdown"
                                data-bs-display="static"
                                data-bs-auto-close="outside">
                            <i class="fa fa-cog me-2"></i> Config. Columnas
                        </button>
                        <ul class="dropdown-menu cc-dropdown-menu"
                            id="configColumnasMenu"></ul>
                    </div>

                    <!-- IMPORTANTE: usar BUTTON, no <a>, para que no scrollee -->
                    <button type="button"
                            class="btn btn-success d-flex align-items-center px-3 py-2 btnnuevo"
                            onclick="nuevaTarea()">
                        <i class="fa fa-plus-square me-2"></i> Nuevo
                    </button>
                </div>
            </div>
        </div>

        <div class="card-glass p-3">
            <div class="dt-dark-wrap">
                <table class="dt-dark display nowrap compact"
                       id="grd_Tareas" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Fecha</th>
                            <th>Fecha Límite</th>
                            <th>Personal</th>
                            <th>Estado</th>
                            <th>Descripción</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- MODAL -->
<div class="modal fade" id="modalEdicion" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">

            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold" id="modalEdicionLabel">
                    Nueva Tarea
                </h5>
                <button type="button" class="btn-close"
                        data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <form class="row g-3">
                    <input type="text" id="txtId" hidden>

                    <div class="col-md-6">
                        <label class="form-label">Fecha</label>
                        <input id="dtpFecha" type="date" class="form-control" required>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Fecha Límite</label>
                        <input id="dtpFechaLimite" type="date" class="form-control" required>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Personal</label>
                        <select id="cmbPersonal" class="form-control"></select>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Estado</label>
                        <select id="cmbEstado" class="form-control"></select>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div class="col-md-12">
                        <label class="form-label">Descripción</label>
                        <textarea id="txtDescripcion" class="form-control" rows="3" required></textarea>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div class="col-12">
                        <div class="rp-auditoria d-none" id="infoAuditoria">
                            <div id="infoRegistro"></div>
                            <div id="infoModificacion"></div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="alert alert-danger d-none" id="errorCampos">
                            Revisá los campos obligatorios.
                        </div>
                    </div>

                </form>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary"
                        data-bs-dismiss="modal" type="button">
                    <i class="fa fa-arrow-left"></i> Volver
                </button>

                <button id="btnGuardar"
                        class="btn btn-primary"
                        type="button"
                        onclick="guardarTarea()">
                    <i class="fa fa-check"></i> Registrar
                </button>
            </div>
        </div>
    </div>
</div>

<partial name="~/Views/Utils/Modals.cshtml" />


@section Scripts {

    <!-- 1️⃣ jQuery (SIEMPRE primero) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- 2️⃣ DataTables CORE -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <!-- 3️⃣ DataTables Buttons (DESPUÉS del core) -->
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>

    <!-- 4️⃣ Dependencias exportación -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>

    <!-- 5️⃣ Botones HTML5 -->
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>

    <!-- 6️⃣ Select2 -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>


    <script src="~/js/utils/moment.js"></script>

    <!-- 7️⃣ TU SCRIPT (SIEMPRE ÚLTIMO) -->
    <script src="~/js/Tareas.js?v=1.0"></script>

}